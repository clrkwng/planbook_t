{% extends "AppBundle::layout.html.twig" %}

{% block content %}

    {% for prize in data.prizes %}

        <div>
            <a href="{{ path('get_prize',  {'prize': prize})}}">{{ prize }} in html</a>,
            <a href="{{ path('get_prize', {'prize': prize, '_format': 'json'}) }}">{{ prize }} in json</a> and
            <a href="{{ path('get_prize', {'prize': prize, '_format': 'xml'}) }}">{{ prize }} in xml</a>
            <a href="{{ path('get_prize', {'prize': prize}) }}">{{ prize }} in the default format</a>,
        </div>

    {% endfor %}

    <div><a href="{{ path('get_prizes', {'_format': 'json'}) }}">list prizes in json</a></div>
    <div><a href="{{ path('get_prizes', {'_format': 'xml'}) }}">list prizes in xml</a></div>
    <div><a href="{{ path('get_prizes') }}">list prizes in the default format</a></div>

    <div><a href="{{ path('get_prizes', {'_format': 'html'}) }}">form to create a new prizes in html</a></div>

    Rendered with twig. Page: {{ data.page }}

{% endblock content %}